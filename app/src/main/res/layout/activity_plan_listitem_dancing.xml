<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/imageView_dancing_avatar"
        android:layout_toRightOf="@+id/imageView_dancing_avatar"
        android:id="@+id/textView_dancing_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/imageView_dancing_avatar"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView_dancing_duration"
        android:layout_below="@+id/textView_dancing_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView_dancing_name"
        android:layout_alignStart="@+id/textView_dancing_name" />
</RelativeLayout>