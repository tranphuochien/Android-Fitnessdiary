<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_plan__create_plan"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.op.fitnessdiary.Plan.Plan_CreatePlan">

    <TextView
        android:text="Num.Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_plan_numday"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/editText_plan_numday" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText_plan_numday"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView_plan_numday"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="22dp"
        android:id="@+id/listview_create_plan"
        android:layout_below="@+id/button_setplan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Set plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_setplan"
        android:layout_below="@+id/editText_plan_numday"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
