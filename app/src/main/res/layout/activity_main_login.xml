<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GUI.MainLogin.MainLogin">

    <ImageView
        android:layout_width="360px"
        android:layout_height="360px"
        app:srcCompat="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="144dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="41dp"
        android:id="@+id/logoView" />

    <EditText
        android:id="@+id/usernameEt"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:hint="@string/hint_username"
        android:layout_below="@id/logoView"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.EditText"/>

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="580px"
        android:layout_height="wrap_content"
        android:hint="@string/hint_password"
        android:layout_below="@id/usernameEt"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        style="@style/Base.Widget.AppCompat.EditText"
        android:inputType="textPassword" />

    <ImageButton
        android:layout_width="520px"
        android:layout_height="40dp"
        app:srcCompat="@drawable/gmail_button_changed"
        android:id="@+id/googleButton"
        android:scaleType="fitCenter"
        android:background="@android:color/background_light"
        android:layout_alignTop="@+id/signinButton"
        android:layout_alignLeft="@+id/signinButton"
        android:layout_alignStart="@+id/signinButton"
        android:layout_marginTop="38dp" />

    <ImageButton
        android:layout_width="520px"
        android:layout_height="47dp"
        app:srcCompat="@drawable/signin_button_changed"
        android:id="@+id/signinButton"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        android:layout_below="@+id/etpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textStyle="normal|bold"
        android:layout_below="@+id/googleButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Create an account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createAccountTextView"
        android:layout_below="@+id/googleButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp" />

    <TextView
        android:text="Forgot password?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgotPassTextView"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_below="@+id/googleButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
