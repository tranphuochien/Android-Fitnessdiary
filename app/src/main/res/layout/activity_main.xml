<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="44dp"
        android:id="@+id/test_intent_to_setting"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onClickSetting" />

    <Button
        android:text="BaseStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test_intent_to_setting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:id="@+id/test_intent_to_baseStats"
        android:onClick="onClickBaseStats" />

    <Button
        android:text="Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_intent_to_setting"
        android:layout_alignLeft="@+id/test_intent_to_setting"
        android:layout_alignStart="@+id/test_intent_to_setting"
        android:layout_marginTop="54dp"
        android:id="@+id/test_intent_to_album"
        android:onClick="onClickAlbum" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test_intent_to_album"
        android:layout_alignLeft="@+id/test_intent_to_baseStats"
        android:layout_alignStart="@+id/test_intent_to_baseStats"
        android:id="@+id/test_intent_to_event"
        android:onClick="onClickEvent" />
</RelativeLayout>