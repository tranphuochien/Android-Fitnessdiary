<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="BaseStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/test_intent_to_setting"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp"
        android:id="@+id/test_intent_to_baseStats"
        android:onClick="onClickBaseStats" />

    <Button
        android:text="Event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test_intent_to_album"
        android:layout_alignLeft="@+id/test_intent_to_baseStats"
        android:layout_alignStart="@+id/test_intent_to_baseStats"
        android:id="@+id/test_intent_to_event"
        android:onClick="onClickEvent" />

    <Button
        android:text="Setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_intent_to_setting"
        android:onClick="onClickSetting"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/test_intent_to_event"
        android:layout_toLeftOf="@+id/test_intent_to_baseStats"
        android:layout_toStartOf="@+id/test_intent_to_baseStats"
        android:layout_marginRight="37dp"
        android:layout_marginEnd="37dp" />

    <Button
        android:text="Album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/test_intent_to_album"
        android:onClick="onClickAlbum"
        android:layout_marginBottom="62dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/test_intent_to_setting"
        android:layout_alignStart="@+id/test_intent_to_setting" />
</RelativeLayout>