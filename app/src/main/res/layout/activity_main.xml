<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:text="Sign in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="23dp"
        android:id="@+id/button_signin" />

    <Button
        android:text="Celebrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button_signin"
        android:layout_centerHorizontal="true"
        android:id="@+id/button_celebrate" />

    <Button
        android:text="Plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_plan"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignBaseline="@+id/button_celebrate"
        android:layout_alignBottom="@+id/button_celebrate"
        android:layout_toRightOf="@+id/button_celebrate"
        android:layout_toEndOf="@+id/button_celebrate" />
</RelativeLayout>