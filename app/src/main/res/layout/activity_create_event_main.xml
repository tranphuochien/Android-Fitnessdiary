<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_event_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GUI.createEvent.CreateEvent_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <ImageView
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/avatar_test"
                android:id="@+id/CreateEvent_avatar"
                android:layout_weight="0.02" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/CreateEvent_statusText"
                android:layout_weight="0.28"
                android:gravity="top|center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

            <Button
                android:text="Taking Photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_photoBtn"
                android:layout_weight="0.02" />

            <Button
                android:text="Album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_albumBtn"
                android:layout_weight="0.02" />

            <Button
                android:text="Choose Event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_chooseEventBtn"
                android:layout_weight="0.02" />

            <Button
                android:text="Check In"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_checkinBtn"
                android:layout_weight="0.02" />

            <Button
                android:text="Set Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_setTimeBtn"
                android:layout_weight="0.02" />

            <Button
                android:text="Live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/CreateEvent_liveStreamBtn"
                android:layout_weight="0.02" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <Button
                    android:text="Start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:id="@+id/CreateEvent_startBtn"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/CreateEvent_startBtn"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="34dp"
                    android:layout_marginEnd="34dp"
                    android:id="@+id/CreateEvent_cancelBtn"
                    android:onClick="onClickCancel" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
