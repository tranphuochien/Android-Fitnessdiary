<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/imageView_dancing_avatar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_dancing_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/imageView_dancing_avatar"
        android:layout_toEndOf="@+id/imageView_dancing_avatar"
        android:layout_alignBottom="@+id/imageView_dancing_avatar"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textColor="@color/colorAccent"
        android:textAlignment="center" />

    <TextView
        android:text="Duration :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView_dancing_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:layout_toLeftOf="@+id/editText_dancing_edit_duration"
        android:layout_toStartOf="@+id/editText_dancing_edit_duration"
        android:layout_alignBottom="@+id/editText_dancing_edit_duration"
        android:paddingTop="10dp"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/textView_dancing_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/editText_dancing_edit_duration"
        android:layout_marginTop="10dp" />
</RelativeLayout>