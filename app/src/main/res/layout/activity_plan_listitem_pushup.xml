<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/imageView_pushup_avatar"
        android:layout_toRightOf="@+id/imageView_pushup_avatar"
        android:id="@+id/textView_pushup_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="30dp"
        android:text="Pushup" />

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/imageView_pushup_avatar"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/textView_pushup_duration"
        android:layout_below="@+id/textView_pushup_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView_pushup_name"
        android:layout_alignStart="@+id/textView_pushup_name"
        android:text="a" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/textView_pushup_duration"
        android:layout_toRightOf="@+id/imageView_pushup_avatar"
        android:id="@+id/textView_lifting_times"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="b" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/textView_lifting_times"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_pushup_nHitOnTime"
        android:layout_toRightOf="@+id/imageView_pushup_avatar"
        android:layout_toEndOf="@+id/imageView_pushup_avatar"
        android:text="c" />

</RelativeLayout>